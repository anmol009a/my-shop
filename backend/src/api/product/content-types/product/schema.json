{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "price": {
      "type": "decimal",
      "min": 0,
      "required": true
    },
    "quantity": {
      "type": "decimal",
      "required": true,
      "min": 1
    },
    "unit": {
      "type": "enumeration",
      "enum": [
        "kg",
        "g",
        "pc"
      ],
      "default": "kg",
      "required": true
    },
    "img": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "required": true
    }
  }
}
